<!-- Header -->
<header class="sticky-top">
	<nav class="navbar navbar-expand-xl navbar-dark bg-white mb-5">
		<div class="container">
			<a class="navbar-brand text-decoration-none" href="{{ path('app_home') }}">
				<h2>Stand Blog<em>.</em>
				</h2>
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse pt-xl-0 pt-5" id="navbarCollapse">
				<ul class="navbar-nav mt-xl-0 mt-3 ms-xl-auto">
					<li class="nav-item">
						<a class="nav-link {{ active(myRoute,'app_home' ) }} text-decoration-none" href=" {{ path('app_home') }} ">Accueil
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {{ active(myRoute ,'article_index') }}" href="{{ path('article_index') }}">Articles</a>
					</li>
					{#  #}
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li class="nav-item">
							<a class="nav-link {{ active(myRoute,'article_new') }}" href="{{ path('article_new') }}">Créer pin</a>
						</li>
					{% endif %}
					{#  #}

					<li class="nav-item">
						<a class="nav-link {{ active(myRoute,'app_about') }}" href="{{ path('app_about') }}">A propos</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {{ active(myRoute,'app_contact') }}" href="{{ path('app_contact') }}">Contact</a>
					</li>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li>
							<div class="dropdown">
								<button class="btn dropdown-toggle dropdown_user" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
									<span class="text-success me-1 fw-bold">{{ app.user.fullName }}</span>
									<img width="28" height="28" class="rounded-circle border border-success" src="{{ app.user.image ? vich_uploader_asset(app.user,'imageFile') : asset("build/img/user_avatar/f_profil_defaut.jpg") }}">
								</button>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
									<li>
										<a class="dropdown-item" href="#">Information</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Compte</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
									</li>
								</ul>
							</div>
						</li>

					{% endif %}

					{% if app.user is null %}
						<li class="nav-item">
							<a class="nav-link {{ active(myRoute,'app_login') }}" href="{{ path('app_login') }}">Se connecter</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
</header>
